<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <br />
  <div class="field">
    <%= f.label :date_on %><br />
    <%= f.datetime_select :date_on, :minute_step => 5 %>
  から
  </div>
  <div class="field">
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at, :minute_step => 5 %>
  まで
  </div>
  <br />
  <div class="field">
    <%= f.label :information %><br />
    <%= f.text_area :information, :size => "40x5" %>
  </div>
  <br />
  <div class="field">
    <%= f.label :coffeespot_id %><br />
    <%= f.select :coffeespot_id, Coffeespot.all.collect {|c| [c.name, c.id]}, :prompt => "" %>
  </div>

  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
