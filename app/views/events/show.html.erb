  <%= link_to '[このイベントの編集]', edit_event_path(@event) %>
  &nbsp;|&nbsp;
  <%= link_to '[このイベントのレポートを書く]', new_event_report_path(@event) %>
<% end %>

<br />
<br />

<% @reports.each do |report| %>
  <%= report.report %>
<% end %>
