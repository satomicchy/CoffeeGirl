<p>
  <%= image_tag ("img01_left.jpg")%>&nbsp;&nbsp;<%= link_to 'イベントに戻る', event_path(@event) %>
</p>

<p>
  <b>タイトル：</b><%= @event.title %>
</p>
<p>
  <b>日時：</b><%= @event.date_on.strftime("%Y/%m/%d-%H:%M") %>&nbsp;より
</p>

<%= form_for([@event, @report]) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :report %><br />
    <%= f.text_area :report, :size => "60x10" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
