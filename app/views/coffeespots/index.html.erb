<h1>Coffeespots</h1>

<br />
<% if current_member %>
  <%= link_to '[Coffeespot登録]', new_coffeespot_path %>
<% end %>

<table>
  <tr>
    <th>お店の名前</th>
    <th>住所</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coffeespots.each do |coffeespot| %>
  <tr>
    <td><%= coffeespot.name %></td>
    <td><%= coffeespot.address %></td>
    <td><%= image_tag ("img01.jpg")%>&nbsp;&nbsp;<%= link_to '詳細', coffeespot %></td>
    <% if current_member %>
      <td><%= link_to 'Edit', edit_coffeespot_path(coffeespot) %></td>
      <td><%= link_to 'Destroy', coffeespot, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

